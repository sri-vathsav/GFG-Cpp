// jump statement - Continue

#include<iostream>
using namespace std;

int main()
{
    for(int i = 0; i<10; i++)
    {
        int x, y;
        cout << "Enter x and y ";
        cin >> x >> y;
        if (y == 0)
        {
            cout << "Invalid" << endl; 
            continue;
        }
    cout << x/y << " " <<endl;
    }
}

// jump statements - Break

#include<iostream>
using namespace std;

int main()
{
    for(int i = 0; i<10; i++)
    {
        if (i == 5)
            break;
        cout << i << " ";
    }
}

// jump statements - Return

#include<iostream>
using namespace std;

int main()
{
    cout << "Begin ";
    for(int i = 0; i<10; i++)
    {
        if (i == 5)
            return 0;
        cout << i << " ";
    }
    cout << "End";
}

//jump statements - Goto

#include<iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter a number ";
    cin >> n;
    if (n % 2 == 0)
        goto label1;
    else
        goto label2;
    label1:
        cout << "Even";
        return 0;
    label2:
        cout << "Odd";
}

// The end

